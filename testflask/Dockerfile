FROM ubuntu:16.04
LABEL maintainer="mms"
ENV LANG C

RUN apt-get update \
  && apt-get install -y python3-pip python3-dev locales\
  && pip3 install --upgrade pip

COPY . /app
WORKDIR /app
RUN pip3 install -r requirements.txt
ENTRYPOINT ["python3"]
CMD ["app.py"]
#CMD ["gunicorn", "app:app", "-c", "./gunicorn.conf.py"]
